<LinearLayout android:background="@drawable/linear_layout" xmlns:android="http://schemas.android.com/apk/res/android"
<!-- Copyright (C) 2014 John Charles Byrne Distributed under the terms of GPL.  Please leave this notice intact when copying  -->
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

  	<LinearLayout android:background="@drawable/linear_layout"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content" >

  		<ListView
  		    android:id="@+id/listView1"
  		    android:layout_width="match_parent"
  		    android:layout_height="343dp" >

  		</ListView>

    </LinearLayout>
    
    <LinearLayout android:background="@drawable/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint=""
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button android:background="@drawable/button" android:textColor="#FFFFFF"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LinkCompany" 
            android:onClick="linkCompany"/>
    </LinearLayout>
    
    <LinearLayout android:background="@drawable/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal|top" >

        <Button android:background="@drawable/button" android:textColor="#FFFFFF"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddPerson" 
            android:onClick="commitPerson"/>

        <Button android:background="@drawable/button" android:textColor="#FFFFFF"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UpdatePerson" />

    </LinearLayout>

</LinearLayout>
