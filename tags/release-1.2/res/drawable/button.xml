<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#009bff" />
            <padding android:left="3dp" android:right="3dp" android:bottom="1dp" android:top="1dp" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="#009BE2" />
            <padding android:left="3dp" android:right="3dp" android:bottom="1dp" android:top="1dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="#4cb9ea" />
            <padding android:left="3dp" android:right="3dp" android:bottom="1dp" android:top="1dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="3dip" android:color="#5e7974" />
            <solid android:color="#000000" />
        </shape></item>

</selector>
